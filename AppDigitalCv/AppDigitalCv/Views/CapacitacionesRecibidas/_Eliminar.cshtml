@model AppDigitalCv.ViewModels.CapacitacionesRecibidasVM
@using AppDigitalCv.Security
<div>
    <form id="myForm">
        <div class="bs-container">
            <div class="row">
                <div class="col-md-4 col-xs-12 col-sm-6 col-lg-4">
                    <img alt="user Pic" src="~/Imagenes/escudo_uttt.jpg" id="profile-image1" class="product-img img-responsive" width="100" height="70" />
                </div>
                <div class="col-md-7 col-xs-11 col-sm-5 col-lg-7">
                        @Html.HiddenFor(model => model.id)
                        @Html.HiddenFor(model => model.idDocumento)
                        <div class="form-group">
                            <label>Nombre de la Capacitación:</label>
                            @Html.TextBoxFor(model => model.strNombre, new { @class = "form-control input-sm", disabled = "", id = "nombre" })
                        </div>
                        <div class="form-group">
                            <label>Tipo de Capacitación:</label>
                            @Html.TextBoxFor(model => model.TipoCapacitacion.strValor, new { @class = "form-control input-sm", disabled = "", id = "idFrecuencia" })
                        </div>                                     
                    <div class="form-group">
                        <input type="button" class="btn btn-danger" value="Eliminar" id="btnEnviar" />
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

<script>

    $(document).ready(function () {

        $("#btnEnviar").click(function () {

            let CapacitacionesRecibidasVM = {};

            CapacitacionesRecibidasVM.id = $('#id').val();
            CapacitacionesRecibidasVM.idDocumento = $('#idDocumento').val();

            $.ajax({
                type: "post",
                url: "/CapacitacionesRecibidas/DeleteCapacitacionRecibida",
                data: { capacitacionesRecibidasVM: CapacitacionesRecibidasVM},
                success: function () {
                    window.location.href = "/CapacitacionesRecibidas/Create";
                },
                error: function (xhr, textStatus, errorThrown) {
                    alert(textStatus);
                    console.log(textStatus);
                }
            });
        });
    });
</script>


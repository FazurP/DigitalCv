
@model AppDigitalCv.ViewModels.LenguasVM
@using AppDigitalCv.Security

<div>

    <form id="myForm">
       @Html.HiddenFor(model => model.id)
        <div class="form-inline">
            <div class="form-group">
                <div class="row">
                    <div class="col-lg-3">
                        <img alt="user Pic" src="~/Imagenes/escudo_uttt.jpg" id="profile-image1" class="product-img img-responsive" width="100" height="70" />
                    </div>
                    <div class="col-lg-3">
                        ¿Deseas <strong>Eliminar</strong> este registro realmente?
                    </div>
                    <div class="col-lg-6">
                        @Html.TextBoxFor(m => m.Dialecto.StrDescripcion, new { @class = "form-control input-sm",@readonly=true })

                        <a href="#" id="btnEnviar">
                            <i class="btn btn-sm btn-google glyphicon glyphicon-trash"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

<script>
        $(document).ready(function () {

            $("#btnEnviar").click(function () {

                var myformdat = $("#myForm").serialize();

                $.ajax({

                    type: "POST",
                    url: "/DialectoIdioma/DeleteDialectoById",
                    data: myformdat,
                    success: function () {
                        $("#loaderDiv").hide();
                        $("#myModal").modal("hide");
                        window.location.href = "/DialectoIdioma/Create";

                    }

                })
            })
        })
</script>

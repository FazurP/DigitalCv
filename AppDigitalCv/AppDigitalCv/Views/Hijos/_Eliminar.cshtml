@model AppDigitalCv.ViewModels.ParentescoVM
@using AppDigitalCv.Security

    <div>
        <form id="myForm">
            @Html.HiddenFor(m => m.IdFamiliar, new { @class = "form-control input-sm", id = "IdFamiliar" })
            @Html.HiddenFor(m => m.IdParentesco)
            @Html.HiddenFor(m => m.IdPersonal)
            @Html.HiddenFor(m => m.StrNombre)
            <div class="">
                <div class="form-group">
                    <div class="row">
                        <div class="col-lg-3">
                            <img alt="user Pic" src="~/Imagenes/escudo_uttt.jpg" id="profile-image1" class="product-img img-responsive" width="100" height="70" />
                        </div>
                        <div class="col-lg-3">
                            ¿Deseas <strong>Eliminar</strong> este registro realmente?
                        </div>
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label>Nombre(s):</label>
                                @Html.TextBoxFor(m => m.StrNombre, new { @class = "form-control input-sm", @placeholder = "Nombre", @disabled = "disabled" })
                            </div>
                            <div class="form-group">
                                <label>Apellido Paterno:</label>
                                @Html.TextBoxFor(m => m.strApellidoPaterno, new { @class = "form-control input-sm", @placeholder = "Apellido Paterno", @disabled = "disabled" })
                            </div>
                            <div class="form-group">
                                <label>Apellido Materno:</label>
                                @Html.TextBoxFor(m => m.strApellidoPaterno, new { @class = "form-control input-sm", @placeholder = "Apellido Materno", @disabled = "disabled" })
                            </div>
                            <div class="form-group">
                                <a href="#" id="btnSubmit">
                                    <i class="btn btn-sm btn-danger">Eliminar</i>
                                </a>
                            </div>   
                        </div>
                    </div>
                </div>
            </div>



        </form>

    </div>
<script>

    $(document).ready(function () {

        $("#btnSubmit").click(function () {
          
            $("#loaderDiv").show();

            var myformdata = $("#myForm").serialize();
           
            $.ajax({
                
                type: "POST",
                url: "/Hijos/EliminarFamiliar",
                data: myformdata,
                success: function () {
                    $("#loaderDiv").hide();
                    $("#myModal").modal("hide");
                    window.location.href = "/Hijos/Create";
                    
                }

            })
        })

    })


</script>
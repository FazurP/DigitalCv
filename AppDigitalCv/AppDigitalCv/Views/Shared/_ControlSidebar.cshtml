@using AppDigitalCv.Business;
@using AppDigitalCv.Domain;
@using AppDigitalCv.Security;

<aside class="control-sidebar control-sidebar-dark">
    @* BEGIN Tabs *@
    <ul class="nav nav-tabs nav-justified control-sidebar-tabs">
        <li class="active"><a href="#control-sidebar-home-tab" data-toggle="tab"><i class="fa fa-hourglass"></i></a></li>
        <li><a href="#control-sidebar-settings-tab" data-toggle="tab"><i class="fa fa-gears"></i></a></li>
    </ul>
    @* END Tabs *@
    <div class="tab-content">
        @* BEGIN Home Tab *@
        <div class="tab-pane active" id="control-sidebar-home-tab">
            <h3 class="control-sidebar-heading">Control de Progresos</h3>
            @*<ul class="control-sidebar-menu">
            <li>
                <a href="javascript::;">
                    <i class="menu-icon fa fa-birthday-cake bg-red"></i>

                    <div class="menu-info">
                        <h4 class="control-sidebar-subheading">Langdon's Birthday</h4>

                        <p>Will be 23 on April 24th</p>
                    </div>
                </a>
            </li>
        </ul>*@

            <h3 class="control-sidebar-heading">Porcentaje de PRODEP</h3>
            <ul class="control-sidebar-menu">
                <li>
                    <a href="javascript::;">
                        <h4 class="control-sidebar-subheading">
                            % Completado
                            @{
                                ProgresoProdepBusiness progresoProdep = new ProgresoProdepBusiness();

                                if (SessionPersister.AccountSession != null)
                                {
                                    ViewBag.Progreso = new List<ProgresoProdepDomainModel>(progresoProdep.GetProgresoByPersonalBreak(SessionPersister.AccountSession.IdPersonal));
                                    if (ViewBag.Progreso.Count == 1)
                                    {
                                        <span class="pull-right-container">
                                            <span class="label label-danger pull-right">10%</span>
                                        </span>
                                    }
                                    else if (ViewBag.Progreso.Count == 2)
                                    {
                                        <span class="pull-right-container">
                                            <span class="label label-danger pull-right">20%</span>
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="pull-right-container">
                                            <span class="label label-danger pull-right">0%</span>
                                        </span>
                                    }
                                }
                                else
                                {
                                    <span class="pull-right-container">
                                        <span class="label label-danger pull-right">0%</span>
                                    </span>
                                }
                            }
                        </h4>
                        @{
                            if (SessionPersister.AccountSession != null)
                            {
                                if (ViewBag.Progreso.Count == 1)
                                {
                                    <div class="progress progress-xxs">
                                        <div class="progress-bar progress-bar-success" style="width: 10%"></div>
                                    </div>
                                }
                                else if (ViewBag.Progreso.Count == 2)
                                {
                                    <div class="progress progress-xxs">
                                        <div class="progress-bar progress-bar-success" style="width: 20%"></div>
                                    </div>
                                }
                                else
                                {
                                    <div class="progress progress-xxs">
                                        <div class="progress-bar progress-bar-success" style="width: 0"></div>
                                    </div>
                                }
                            }
                            else
                            {
                                <div class="progress progress-xxs">
                                    <div class="progress-bar progress-bar-success" style="width: 0"></div>
                                </div>
                            }

                        }
                    </a>
                </li>
            </ul>
        </div>
        @* END Home Tab *@
        <div class="tab-pane" id="control-sidebar-stats-tab">Stats Tab Content</div>
        @* BEGIN Settings Tab *@
        <div class="tab-pane" id="control-sidebar-settings-tab">
            <form method="post">
                <h3 class="control-sidebar-heading">General Settings</h3>

                <div class="form-group">
                    <label class="control-sidebar-subheading">
                        Report panel usage
                        <input type="checkbox" class="pull-right" checked>
                    </label>

                    <p>
                        Some information about this general settings option
                    </p>
                </div>
            </form>
        </div>
        @* END Settings Tab *@
    </div>
</aside>
@* Add the sidebar's background. This div must be placed immediately after the control sidebar *@
<div class="control-sidebar-bg"></div>
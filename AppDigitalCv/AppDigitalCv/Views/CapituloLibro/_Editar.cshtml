@model AppDigitalCv.ViewModels.CapituloLibroVM
@using AppDigitalCv.Security

<div>
    <form id="myForm" enctype="multipart/form-data">

        @Html.HiddenFor(model => model.id, new { id = "id" })

        <div class="bs-container">

            <div class="col-md-4 col-xs-12 col-sm-6 col-lg-4">
                <img alt="user Pic" src="~/Imagenes/escudo_uttt.jpg" id="profile-image1" class="product-img img-responsive" width="100" height="70" />
            </div>
            <div class="row">
                <div class="form-group col-lg-7">
                    @Html.Label("Datos del Libro")
                    <hr />
                    <label>Autor:</label>
                    @Html.TextBoxFor(model => model.strAutor, new { @class = "form-control input-sm", id = "Autor" })
                    <label>Titulo</label>
                    @Html.TextBoxFor(model => model.strTitulo, new { @class = "form-control input-sm", id = "Titulo" })
                    <label>Editorial</label>
                    @Html.TextBoxFor(model => model.strEditorial, new { @class = "form-control input-sm", id = "Editorial" })
                    <label>Edicion</label>
                    @Html.TextBoxFor(model => model.strEdicion, new { @class = "form-control input-sm", id = "Edicion" })
                    <label>Tiraje</label>
                    @Html.TextBoxFor(model => model.strTiraje, new { @class = "form-control input-sm", id = "Tiraje" })
                    <label>ISBN</label>
                    @Html.TextBoxFor(model => model.strISBN, new { @class = "form-control input-sm", id = "ISBN" })
                    <hr />
                    @Html.Label("Datos del Capitulo")
                    <hr />
                    <label>Titulo del Capitulo</label>
                    @Html.TextBoxFor(model => model.strTituloCapitulo, new { @class = "form-control input-sm", id = "TituloCapitulo" })
                    <label>Autores</label>
                    @Html.TextBoxFor(model => model.strAutores, new { @class = "form-control input-sm", id = "Autores" })
                </div>

                <div class="row">
                    <div class="form-group col-lg-6 col-lg-offset-4">
                        <a href="#" id="btnEnviar" class="btn btn-sm btn-success"><span><i class="fa fa-edit"></i> Actualizar</span></a>
                    </div>
                </div>
            </div>
        </div>
    </form>

</div>


<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script src="~/Content/js/plugins/bootstrap/bootstrap.min.js"></script>


<script>

    $(document).ready(function () {

        $("#btnEnviar").click(function () {

            var CapituloLibroVM = {};
            var IdPersonal = @SessionPersister.AccountSession.IdPersonal;

            CapituloLibroVM.id = $('#id').val();
            CapituloLibroVM.strAutor = $('#Autor').val();
            CapituloLibroVM.strTitulo = $('#Titulo').val();
            CapituloLibroVM.strEditorial = $('#Editorial').val();
            CapituloLibroVM.strEdicion = $('#Edicion').val();
            CapituloLibroVM.strTiraje = $('#Tiraje').val();
            CapituloLibroVM.strISBN = $('#ISBN').val();
            CapituloLibroVM.strTituloCapitulo = $('#TituloCapitulo').val();
            CapituloLibroVM.strAutores = $('#Autores').val();

            $.ajax({
                type: "POST",
                url: "/CapituloLibro/UpdateCapituloLibro",
                data: { capituloLibroVM: CapituloLibroVM},
                success: function () {
                    $("#myModal1").modal("hide");
                    window.location.href = "/CapituloLibro/Create";
                },
                error: function (xhr, textStatus, errorThrown) {
                    alert(textStatus);
                    console.log(textStatus);

                }
            })
        });
    });
</script>



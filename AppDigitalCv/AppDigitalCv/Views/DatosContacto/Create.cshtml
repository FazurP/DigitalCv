@model AppDigitalCv.ViewModels.DatosContactoVM
@using AppDigitalCv.Security
@{
    /**/

    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm("Create", "DatosContacto"))
{
    @Html.AntiForgeryToken()

    <div class="bs-container" style="min-height:960px;">
        <section class="content-header">
            <h1>
                Agregar Datos de Contactos
                <small>(Agregar)</small>
            </h1>
            <ol class="breadcrumb">
                <li><a href="#"> <i class="fa fa-dashboard"></i> Inicio </a></li>
                <li> <a href="#"> Datos</a></li>
                <li class="active"> Datos del Contacto </li>
            </ol>
        </section>
        <br />
        <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <div class="box box-success">
                    <div class="box-header with-border">
                        <h5 class="box-title">
                            <label class="text-success emailtitleletter">
                                <i class="text-success fa fa-graduation-cap"></i>
                                @SessionPersister.AccountSession.NombreCompleto
                            </label>&nbsp;
                            @*<a href="@Url.Action("GetDatosCompetenciasTI","CompetenciaTi")" class="linkfacebookletter">&nbsp;<i class="fa fa-tag"></i><span>Editar Competencias en TI</span> </a>*@
                        </h5>
                        <!-- /.box-tools -->
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body">
                        <div role="form">
                            <div class="form-group">
                                <div class="col-sm-6 col-md-6 col-lg-6">
                                    <div class="form-group ">
                                        <label>Telefono Celular:</label>
                                        @Html.TextBoxFor(model => model.TelefonoCelular, new { @class = "form-control input-sm", placeholder = "Tu Número Celular", required = "", pattern = "^[0-9]+$", id = "TelefonoCelular" })
                                        @Html.ValidationMessageFor(model => model.TelefonoCelular, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="form-group ">
                                        <label>Telefono Casa:</label>
                                        @Html.TextBoxFor(model => model.TelefonoCasa, new { @class = "form-control input-sm", placeholder = "Tu Número Casa", required = "", pattern = "^[0-9]+$", id = "TelefonoCasa" })
                                        @Html.ValidationMessageFor(model => model.TelefonoCasa, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="form-group ">
                                        <label>Telefono de Recados:</label>
                                        @Html.TextBoxFor(model => model.TelefonoRecados, new { @class = "form-control input-sm", placeholder = "Tu Número para Recados", required = "", pattern = "^[0-9]+$", id = "TelefonoRecados" })
                                        @Html.ValidationMessageFor(model => model.TelefonoRecados, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="form-group ">
                                        <label>E-mail Institucional:</label>
                                        @Html.TextBoxFor(model => model.MailInstitucional, new { @class = "form-control input-sm", placeholder = "Tu email institucional", required = "", pattern = "[a-zA-Z0-9._-]{3,25}[@]{1}(uttt){1}[.]{1}(edu){1}[.]{1}(mx){1}", id = "EmailInstitucional" })
                                        @Html.ValidationMessageFor(model => model.MailInstitucional, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="col-sm-6 col-md-6 col-lg-6">
                                    <div class="form-group ">
                                        <label>E-mail Personal:</label>
                                        @Html.TextBoxFor(model => model.MailPersonal, new { @class = "form-control input-sm", placeholder = "Tu email personal", required = "", pattern = "[a-zA-Z0-9._-]{3,25}[@]{1}(hotmail|gmail|outlook|yahoo){1}[.]{1}(com|mx|net){1}", id = "EmailPersonal" })
                                        @Html.ValidationMessageFor(model => model.MailPersonal, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="form-group ">
                                        <label>Nombre de Usuario en Facebook:</label>
                                        @Html.TextBoxFor(model => model.NombreFacebook, new { @class = "form-control input-sm", placeholder = "Tu usuario en Facebook", pattern = "^[a-záéíóúñA-ZÁÉÍÓÚÑ ]+$", required = "", id = "Facebook" })
                                        @Html.ValidationMessageFor(model => model.NombreFacebook, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="form-group ">
                                        <label>Nombre de Usuario en Twitter:</label>
                                        @Html.TextBoxFor(model => model.NombreTwitter, new { @class = "form-control input-sm", placeholder = "Tu usuario en Twitter", pattern = "^[a-záéíóúñA-ZÁÉÍÓÚÑ ]+$", required = "", id = "Twitter" })
                                        @Html.ValidationMessageFor(model => model.NombreTwitter, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="form-group">
                                        <br />
                                        <input type="submit" value="Guardar" class="btn btn-success" id="btnGuardar" />
                                    </div>
                                </div>
                              
                            </div>
                        </div>
                    </div>
                    <div class="box-footer">
                        <div>
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <!-- /.box-body -->
                </div>
            </div>
        </div>
    </div>


}
<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<link href="~/Content/toastr.min.css" rel="stylesheet" />
<script src="~/Scripts/toastr.min.js"></script>
<script src="~/Scripts/Validate/DatosContacto/validate-datos-contacto-email.js"></script>
<script src="~/Scripts/Validate/DatosContacto/validate-datos-contacto-form.js"></script>
<script src="~/Scripts/Validate/DatosContacto/validate-datos-contacto-regExp.js"></script>

@section scripts
{
    <script src="~/Scripts/toastr.min.js"></script>
    <script>
        $(document).ready(function () {

            $('#btnGuardar1').click(function () {
                event.preventDefault();
                toastr.success("La información fue Agregada Correctamente");
            });

        });
    </script>
}
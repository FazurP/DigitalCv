@model AppDigitalCv.ViewModels.DatosContactoVM
@using AppDigitalCv.Security

<div>
    <form id="myForm">
        <div class="bs-container">
            <div class="row">
                <div class="col-md-4 col-xs-12 col-sm-6 col-lg-4">
                    @*<img alt="User Pic" src="https://x1.xingassets.com/assets/frontend_minified/img/users/nobody_m.original.jpg" id="profile-image1" class="img-circle img-responsive">*@

                    <img alt="user Pic" src="~/Imagenes/escudo_uttt.jpg" id="profile-image1" class="product-img img-responsive" width="100" height="70" />
                </div>
                <div class="col-md-8 col-xs-12 col-sm-6 col-lg-8">
                    <div class="bs-container">
                        <p class="titleletter">@SessionPersister.AccountSession.NombreCompleto </p>
                        <span><i class="redletter fa fa-trash-o"></i></span><span class="text-red active">¿Realmente quieres eliminar estos datos?</span>
                    </div>
                    @Html.HiddenFor(model => model.IdPersonal)
                    <div class="form-group">
                        <label>Nombre(s):</label>
                        @Html.TextBoxFor(model => model.strNombre, new { @class = "form-control input-sm",@readonly=true })
                    </div>
                    <div class="form-group">
                        <label>Apellido Paterno:</label>
                        @Html.TextBoxFor(model => model.strApellidoPaterno, new { @class = "form-control input-sm",@readonly=true })
                    </div>
                    <div class="form-group">
                        <label>Apellido Materno:</label>
                        @Html.TextBoxFor(model => model.strApellidoMaterno, new { @class = "form-control input-sm",@readonly=true })
                    </div>
                    <div class="form-group">
                        <label>Telefono Celular</label>
                        @Html.TextBoxFor(model => model.TelefonoCelular, new { @class = "form-control input-sm",@readonly=true })
                    </div>
                    <div class="form-group">
                        <label>Telefono de Casa</label>
                        @Html.TextBoxFor(model => model.TelefonoCasa, new { @class = "form-control input-sm",@readonly=true })
                    </div>
                    <div class="form-group">
                        <label>Telefono de Recados</label>
                        @Html.TextBoxFor(model => model.TelefonoRecados, new { @class = "form-control input-sm" ,@readonly=true})
                    </div>
                    <div class="form-group">
                        <label>Email Personal</label>
                        @Html.TextBoxFor(model => model.MailPersonal, new { @class = "form-control input-sm",@readonly=true })
                    </div>
                    <div class="form-group">
                        <label>Dirección</label>
                        @Html.TextBoxFor(model => model.strDireccion, new { @class = "form-control input-sm",@readonly=true })
                    </div>
                    <div class="form-group">
                        <label>Nombre de Usuario en Facebook</label>
                        @Html.TextBoxFor(model => model.NombreFacebook, new { @class = "form-control input-sm",@readonly=true })
                    </div>
                    <div class="form-group">
                        <label>Nombre de Usuario en Twitter</label>
                        @Html.TextBoxFor(model => model.NombreTwitter, new { @class = "form-control input-sm",@readonly=true })
                    </div>
                    <div class="form-group">
                        <label>Asignar Como Contacto de Emergencia?</label>
                        <br />
                        Si @Html.RadioButtonFor(model => model.bitContactoEmergencia, true,new { disabled=""})
                        No @Html.RadioButtonFor(model => model.bitContactoEmergencia, false,new { disabled=""})
                    </div>
                </div>
                
                
            </div>
            <div class="row">
                <div class="col-xs-8 col-sm-8 col-md-8 col-lg-8"></div>
                <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
                    <a href="#" id="btnSubmit" class="btn btn-google"><span><i class="fa fa-trash"></i> Eliminar</span></a>
                </div>
            </div>
        </div>
    </form>


</div>
<script src="~/Content/js/plugins/bootstrap/bootstrap.min.js"></script>
<script>
    $(document).ready(function () {
        $("#btnSubmit").click(function () {
            //serialización del formaulario
            var myformdata = $("#myForm").serialize();
            $.ajax({
                type: "POST",
                url: "/DatosContacto/EliminarDatosDeContactoDocente",
                data: myformdata,
                success: function () {
                    $("#myModal1").modal("hide");
                    window.location.href = "/DatosContacto/Create";
                }
            })
        });
    });
</script>

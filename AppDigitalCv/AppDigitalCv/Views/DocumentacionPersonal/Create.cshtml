@using AppDigitalCv.Security
@model  AppDigitalCv.ViewModels.DocumentacionPersonalVM
@{
    ViewBag.Title = "Registrar Documentacion Adicional";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm(null, null, FormMethod.Post, new { name = "myForm", id = "myForm" }))
{
    @Html.AntiForgeryToken()
    <div class="bs-container" style="min-height:960px;">
        <section class="content-header">
            <h1>
                Informacion Adicional
                <small>(Agregar)</small>
            </h1>
            <ol class="breadcrumb">
                <li><a href="#"> <i class="fa fa-dashboard"></i> Inicio </a></li>
                <li> <a href="#">Agregar</a></li>
                <li class="active">Informacion</li>
            </ol>
        </section>
        <br />
        <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <div class="box box-success">
                    <div class="box-header with-border">
                        <h5 class="box-title">
                            <label class="text-success emailtitleletter">
                                <i class="text-success fa fa-heartbeat"></i>
                                @SessionPersister.AccountSession.NombreCompleto
                            </label>
                        </h5>

                    </div>
                    <div class="box-body">
                   
                        <div class="form-group">
                            
                            <div class="col-sm-4 col-md-4 col-lg-4">
                                <div class="form-group">
                                    <label>Numero de Licencia de Manejo</label>
                                    @Html.TextBoxFor(model => model.NumeroLicenciaManejoVM.strNumeroDocumento, htmlAttributes: new { @placeholder = "Numero de Licencia de Manejo", @required = "", id = "txtNoLicenciaManejo", @class = "form-control input-sm" })
                                </div>
                                <div class="form-group">
                                    <label>Numero de Pasaporte</label>
                                    @Html.TextBoxFor(model => model.NumeroPasaporteVM.strNumeroDocumento, htmlAttributes: new { @placeholder = "Numero de Pasaporte", @required = "", id = "txtNoPasaporte", @class = "form-control input-sm" })
                                </div>
                                <div class="form-group">
                                    <label>Numero de Visa USA</label>
                                    @Html.TextBoxFor(model => model.NumeroVisaUsaVM.strNumeroDocumento, htmlAttributes: new { @placeholder = "Numero de Visa USA", @required = "", id = "txtNumeroVisaUsa", @class = "form-control input-sm" })
                                </div>
                                <div class="form-group">
                                    <label>Numero de Visa Canada</label>
                                    @Html.TextBoxFor(model => model.NumeroVisaCanadaVM.strNumeroDocumento, htmlAttributes: new { @placeholder = "Numero de Visa Canada", @required = "", id = "txtNumeroVisaCanada", @class = "form-control input-sm" })
                                </div>
                                <div class="form-group">
                                    <label>Numero de Seguridad Social</label>
                                    @Html.TextBoxFor(model => model.NumeroSeguridadSocialVM.strNumeroDocumento, htmlAttributes: new { @placeholder = "Numero de Seguridas Social", @required = "", id = "txtNumeroSeguridadSocial", @class = "form-control input-sm" })
                                </div>
                                <div class="form-group">
                                    <label>Registro Prof. Estatal</label>
                                    @Html.TextBoxFor(model => model.RegistroProfEstatalVM.strNumeroDocumento, htmlAttributes: new { @placeholder = "Registro Prof. Estatal", @required = "", @id = "txtRegistroEstatal", @class = "form-control input-sm" })
                                </div>
                                <div class="form-group">
                                    <label>Numero Cartilla del Servicio Militar</label>
                                    @Html.TextBoxFor(model => model.NumeroCartillaMilitarVM.strNumeroDocumento, htmlAttributes: new { @placeholder = "Numero de Cartilla del Servicio Militar", @required = "", @id = "txtNumeroCartillaMilitar", @class = "form-control input-sm" })
                                </div>
                            </div>                       
                            <div class="col-sm-8 col-md-8 col-lg-8">
                                <div class="col-lg-4">
                                    <div class="form-group">
                                        <label>Vigencia Licencia de Manejo</label>
                                        @Html.TextBoxFor(model => model.dteVigenciaDocumento, htmlAttributes: new { @placeholder = "Vigencia de Licencia de Manejo", @required = "", @id = "txtVigenciaLicenciaManejo", @class = "form-control input-sm", @type = "date" })
                                    </div>
                                </div>
                                <div class="col-lg-4">
                                    <div class="form-group">
                                        <label>Evidencia</label>
                                        @Html.TextBoxFor(model => model.DocumentosVM.StrUrl, htmlAttributes: new { @id = "inputUploadLicenciaManejo", @class = "form-control input-sm", @type = "file" })
                                    </div>                           
                                </div>                             
                            </div>
                        </div>


                        <div class="form-group-sm">
                            <!-- Agregamos la tabla de forma dinamica  style="display:none" -->
                            <div class="form-group" id="addTable">
                                <br />
                                <table id="tblAlergias" border="1" style="width: 100%; border:solid 1px #428BCA; border-collapse: collapse;" class="table table-hover">
                                    <thead class="table table table-condensed table-bordered table-responsive table-hover" style="color:white; background-color:#428BCA; font-size:10px;">
                                        <tr>
                                            <th>Nombre</th>
                                            <th>Eliminar</th>

                                        </tr>
                                    </thead>
                                    <tbody id="tblBody"></tbody>
                                </table>
                                <!-- Establecemos el Modal que se va a presentar cuando demos click en la edicion de los datos-->
                                <div class="modal fade" id="myModal1">
                                    <div class="modal-dialog">
                                        <div class="modal-content">
                                            <div class="modal-header" style="background-color:#3C8DBC;color:white;">
                                                <a href="#" class="close" data-dismiss="modal">&times;</a>
                                                <h5 class="modal-title"><label style="font-size:medium;">Alergias</label></h5>
                                            </div>
                                            <div class="modal-body" id="myModalBodyDiv1">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <input type="hidden" id="hiddenAlergiaId" />
                                <!--Terminamos el modal de eliminacion-->
                            </div>
                        </div>

                    </div>

                </div>
            </div>
        </div>
    </div>



}
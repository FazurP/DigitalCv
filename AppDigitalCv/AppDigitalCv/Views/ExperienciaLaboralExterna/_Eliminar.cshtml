@model AppDigitalCv.ViewModels.ExperienciaLaboralExternaVM
@using AppDigitalCv.Security
    <noscript>
        <meta http-equiv="refresh" content="0;URL=@Url.Action("NoScript","Error")" />
    </noscript>
<div>

    <form id="myFormulario">
        @Html.HiddenFor(m => m.idPersonal, new { @class = "form-control input-sm", id = "idPersonal" })
        @Html.HiddenFor(m => m.idDocumento)
        <div class="form-inline">
            <div class="form-group">
                <div class="row">
                    <div class="col-lg-3">
                        <img alt="user Pic" src="~/Imagenes/escudo_uttt.jpg" id="profile-image1" class="product-img img-responsive" width="100" height="70" />
                    </div>
                    <div class="col-lg-3">
                        ¿Deseas <strong>Eliminar</strong> este registro realmente?
                    </div>
                    <div class="col-lg-6">
                            <ul class="todo-list">
                                <li class="list-unstyled">
                                    <label>Empresa: </label> @Html.DisplayFor(m => m.strInstitucionEmpresa, new { @class = "form-control input-sm", @placeholder = "Nombre de la Actividad", @disabled = "disabled" })
                                </li>
                            </ul>                   
                            <br />
                        <a href="#" id="btnSubmit">
                            <i class="btn btn-sm btn-google"> Eliminar</i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

<script>
        $(document).ready(function () {

            $("#btnSubmit").click(function () {

            $("#loaderDiv").show();

                 var myformdat = $("#myFormulario").serialize();

            $.ajax({

                type: "POST",
                url: "/digitalcv/ExperienciaLaboralExterna/DeleteExperiencia",
                data: myformdat,
                success: function () {
                    $("#loaderDiv").hide();
                    $("#myModal").modal("hide");
                    window.location.href = "/digitalcv/ExperienciaLaboralExterna/Create";

                }

            })
        })

        })
</script>
@model AppDigitalCv.ViewModels.ParticipacionInstitucionalExternaVM
@using AppDigitalCv.Security

<div>
    <form id="myForm" enctype="multipart/form-data">

        @Html.HiddenFor(model => model.id, new { id = "id" })
        @Html.HiddenFor(model => model.idCatDocumento)
        @Html.HiddenFor(model => model.idPersonal)
        
        <div class="bs-container">

            <div class="col-md-4 col-xs-12 col-sm-6 col-lg-4">
                <img alt="user Pic" src="~/Imagenes/escudo_uttt.jpg" id="profile-image1" class="product-img img-responsive" width="100" height="70" />
            </div>
            <div class="row">
                <div class="form-group col-lg-7">
                    <label class="titleletter">Datos Actuales</label>
                    <hr />
                    <label>Institucion Superior</label>
                    @Html.TextBoxFor(model => model.institucionSuperior, new { @class = "form-control input-sm", @disabled = "true" })
                    <label>Periodo</label>
                    @Html.TextBoxFor(model => model.periodo, new { @class = "form-control input-sm", @disabled = "true" })
                    <label>Documento</label>
                    @Html.TextBoxFor(model => model.documento, new { @class = "form-control input-sm", @disabled = "true" })
                    <label>Actividad</label>
                    @Html.TextBoxFor(model => model.strActividad, new { @class = "form-control input-sm", @disabled = "true" })
                    <label>Fecha de Inicio</label>
                    @Html.TextBoxFor(model => model.dteFechaInicio, new { @class = "form-control input-sm", @disabled = "true" })
                    <label>Fecha de Termino</label>
                    @Html.TextBoxFor(model => model.dteFechaTermino, new { @class = "form-control input-sm", @disabled = "true" })
                    <br />
                    <label class="titleletter">Nuevos Datos</label>
                    <hr />
                    <label>Institucion Superior</label>
                    @Html.DropDownList("idCatInstitucionSuperior", null, new { @class = "form-control input-sm" })
                    <label>Periodo</label>
                    @Html.DropDownList("idCatPeriodo", null, new { @class = "form-control input-sm" })
                    <label>Actividad</label>
                    @Html.TextBox("Actividad", null, new { @class = "form-control input-sm" })
                    <label>Fecha de Inicio</label>
                    @Html.TextBox("FechaInicio", null, new { @class = "form-control input-sm", @type = "date" })
                    <label>Fecha de Termino</label>
                    @Html.TextBox("FechaTermino", null, new { @class = "form-control input-sm", @type = "date" })
                </div>

              

                <div class="row">
                    <div class="form-group col-lg-6 col-lg-offset-4">
                        <a href="#" id="btnEnviar" class="btn btn-sm btn-success"><span><i class="fa fa-edit"></i> Actualizar</span></a>
                    </div>
                </div>
            </div>
        </div>
    </form>

</div>


<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script src="~/Content/js/plugins/bootstrap/bootstrap.min.js"></script>


<script>

    $(document).ready(function () {

        $("#btnEnviar").click(function () {

            var prueba =  $('#id').val();

            alert(prueba);

            var ParticipacionInstitucionalExternaVM = {};
            var IdPersonal = @SessionPersister.AccountSession.IdPersonal;

            ParticipacionInstitucionalExternaVM.IdPersonal = IdPersonal;
            ParticipacionInstitucionalExternaVM.id = $('#id').val();

            ParticipacionInstitucionalExternaVM.idCatInstitucionSuperior = $('#idCatInstitucionSuperior').val();
            ParticipacionInstitucionalExternaVM.idCatPeriodo = $('#idCatPeriodo').val();
            ParticipacionInstitucionalExternaVM.idCatDocumento = $('#idCatDocumento').val();
            ParticipacionInstitucionalExternaVM.strActividad = $('#Actividad').val();
            ParticipacionInstitucionalExternaVM.dteFechaInicio = $('#FechaInicio').val();
            ParticipacionInstitucionalExternaVM.dteFechaTermino = $('#FechaTermino').val();
            $.ajax({
                type: "POST",
                url: "/ParticipacionInstitucionalExterna/EditarParticipacionPersonal",
                data: { participacionInstitucionalExternaVM: ParticipacionInstitucionalExternaVM},
                success: function () {
                    $("#myModal1").modal("hide");
                    window.location.href = "/ParticipacionInstitucionalExterna/Create";
                },
                error: function (xhr, textStatus, errorThrown) {
                    alert(textStatus);
                    console.log(textStatus);

                }
            })
        });
    });
</script>

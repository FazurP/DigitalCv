@model AppDigitalCv.ViewModels.PresentacionPonenciasVM
@using AppDigitalCv.Security

<div>
    <form id="presentacion">
        @Html.HiddenFor(model => model.idPersonal)
        @Html.HiddenFor(model => model.id)
        <div class="form-inline">
            <div class="form-group">
                <div class="row">
                    <div class="col-lg-3">
                        <img alt="user Pic" src="~/Imagenes/escudo_uttt.jpg" id="profile-image1" class="product-img img-responsive" width="100" height="70" />
                    </div>
                    <div class="col-lg-3">
                        ¿Deseas <strong>Eliminar</strong> este registro realmente?
                    </div>
                    <div class="col-lg-6">
                        <ul class="todo-list">
                            <li class="list-unstyled">
                                <label>Nombre: </label> @Html.DisplayFor(model => model.strNombre, new { @class = "form-control input-sm", @placeholder = "Nombre", @disabled = "disabled" })
                            </li>
                        </ul>
                        <br />
                        <a href="#" id="btnSubmit">
                            <i class="btn btn-sm btn-danger">Eliminar</i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>
<script>

    $(document).ready(function () {

        $("#btnSubmit").click(function () {

            $("#loaderDiv").show();

            let presentacionPonenciasVM = $("#presentacion").serialize();
            $.ajax({

                type: "POST",
                url: "/PresentacionConferencias/EliminarPonencia",
                data: presentacionPonenciasVM,
                success: function () {
                     window.location.href = "/PresentacionConferencias/Create";
                }

            })
        })

    })


</script>

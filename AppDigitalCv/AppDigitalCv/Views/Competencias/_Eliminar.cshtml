
@model AppDigitalCv.ViewModels.CompetenciasPersonalVM
@using AppDigitalCv.Security
    <noscript>
        <meta http-equiv="refresh" content="0;URL=@Url.Action("NoScript","Error")" />
    </noscript>
<div>

    <form id="myFormulario">
        @Html.HiddenFor(model => model.idCompetenciasConocimientosPersonal)
        @Html.HiddenFor(model => model.idDocumento)
        @Html.HiddenFor(model => model.idPersonal)
        @Html.HiddenFor(model => model.file.StrUrl)
        <div class="">
            <div class="form-group">
                <div class="row">
                    <div class="col-lg-3">
                        <img alt="user Pic" src="~/Imagenes/escudo_uttt.jpg" id="profile-image1" class="product-img img-responsive" width="100" height="70" />
                    </div>
                    <div class="col-lg-3">
                        ¿Deseas <strong>Eliminar</strong> este registro realmente?
                    </div>
                    <div class="col-lg-6">
                        <ul class="todo-list">
                            <li class="list-unstyled">
                                <label>Documento: </label>
                                @Html.DisplayFor(m => m.file.StrUrl, new { @class = "form-control input-sm", @placeholder = "Nombre de la Alergia", @disabled = "disabled" })
                            </li>
                        </ul>
                        <br />
                        <div class="form-group">
                            <a href="#" id="btnSubmit">
                                <i class="btn btn-danger">Eliminar</i>
                            </a>
                        </div>                     
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

<script>
        $(document).ready(function () {

            $("#btnSubmit").click(function () {

            $("#loaderDiv").show();

                 var myformdat = $("#myFormulario").serialize();
      
            $.ajax({

                type: "POST",
                url: "/digitalcv/Competencias/DeleteCompetenciaById",
                data: myformdat,
                success: function () {
                    $("#loaderDiv").hide();
                    $("#myModal").modal("hide");
                    window.location.href = "/digitalcv/Competencias/Create";

                }

            })
        })

        })
</script>



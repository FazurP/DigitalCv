@model AppDigitalCv.ViewModels.CapacitacionesImpartidadVM
@using AppDigitalCv.Security
<div>
    <form id="myForm">
        <div class="bs-container">
            <div class="row">
                <div class="col-md-4 col-xs-12 col-sm-6 col-lg-4">
                    <img alt="user Pic" src="~/Imagenes/escudo_uttt.jpg" id="profile-image1" class="product-img img-responsive" width="100" height="70" />
                </div>
                <div class="col-md-7 col-xs-11 col-sm-5 col-lg-7">
                    @Html.HiddenFor(model => model.id)
                    @Html.HiddenFor(model => model.idDocumento)
                    <div class="form-group">
                        <ul class="todo-list">
                            <li class="list-unstyled">
                                <label>Nombre de la Capacitación:</label>
                                @Html.DisplayFor(model => model.strNombre, new { @class = "", disabled = "", id = "" })
                            </li>
                            <li class="list-unstyled">
                                <label>Tipo de Capacitación:</label>
                                @Html.DisplayFor(model => model.strLugarInstitucion, new { @class = "", disabled = "", id = "" })
                            </li>
                            <li class="list-unstyled">
                                <label>Tipo de Capacitación:</label>
                                @Html.DisplayFor(model => model.TipoCapacitacion.strValor, new { @class = "", disabled = "", id = "" })
                            </li>
                        </ul>
                        <br />
                    <div class="form-group">
                        <input type="button" class="btn btn-sm btn-danger" value="Eliminar" id="btnEnviar" />
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

<script>

    $(document).ready(function () {

        $("#btnEnviar").click(function () {

            let CapacitacionesImpartidadVM = {};

            CapacitacionesImpartidadVM.id = $('#id').val();
            CapacitacionesImpartidadVM.idDocumento = $('#idDocumento').val();

            $.ajax({
                type: "post",
                url: "/CapacitacionesImpartidas/DeleteCapacitacionImpartida",
                data: { capacitacionesImpartidadVM: CapacitacionesImpartidadVM},
                success: function () {
                    window.location.href = "/CapacitacionesImpartidas/Create";
                },
                error: function (xhr, textStatus, errorThrown) {
                    alert(textStatus);
                    console.log(textStatus);
                }
            });
        });
    });
</script>



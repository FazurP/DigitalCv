    $(document).ready(function () {   
        $("#btnSubmit").click(function () {

            let strNombreEmpresaInstitucion = $('#NombreEmpresaInstitucion').val();
            let strNombreAlumno = $('#NombreAlumno').val();
            let strEstadoEstadia = $('#EstadoEstadia').get(0).selectedIndex;
            let strResumenProyecto = $('#ResumenProyecto').val();
            let strObjetivo = $('#sObjetivo').val();
            let strPuntosCriticosResolver = $('#PuntosCriticosResolver').val();
            let strLogrosBeneficiosObtenidos = $('#LogrosBeneficiosObtenidos').val();

            if (strNombreEmpresaInstitucion != $.isEmptyObject() && strNombreAlumno != $.isEmptyObject() && strEstadoEstadia > 0 && strResumenProyecto != $.isEmptyObject()
                && strObjetivo != $.isEmptyObject()
                && strPuntosCriticosResolver != $.isEmptyObject() && strLogrosBeneficiosObtenidos != $.isEmptyObject()) {


                var EstadiaEmpresaVM = {};
                var IdPersonal = @SessionPersister.AccountSession.IdPersonal;

                EstadiaEmpresaVM.id = $('#id').val();
                EstadiaEmpresaVM.strNombreEmpresaInstitucion = $('#NombreEmpresaInstitucion').val();
                EstadiaEmpresaVM.strNombreAlumno = $('#NombreAlumno').val();
                EstadiaEmpresaVM.strEstadoEstadia = $('#EstadoEstadia').val();
                EstadiaEmpresaVM.strResumenProyecto = $('#ResumenProyecto').val();
                EstadiaEmpresaVM.strObjetivo = $('#Objetivo').val();
                EstadiaEmpresaVM.strPuntosCriticosResolver = $('#PuntosCriticosResolver').val();
                EstadiaEmpresaVM.strLogrosBeneficiosObtenidos = $('#LogrosBeneficiosObtenidos').val();

                $.ajax({
                    type: "POST",
                    url: "/EstadiaEmpresa/UpdateEstadia",
                    data: { estadiaEmpresaVM: EstadiaEmpresaVM },
                    success: function () {
                        $("#myModal1").modal("hide");
                        window.location.href = "/EstadiaEmpresa/Create";
                    },
                    error: function (xhr, textStatus, errorThrown) {
                        alert(textStatus);
                        console.log(textStatus);

                    }
                });

            } else
            {
                toastr.warning('No Puedes Dejar Campos Vacios', 'Digital-Cv dice', { timeOut: 1000, closeButton:true });
            }


        });
    });
</script>







@model AppDigitalCv.ViewModels.EstadiaEmpresaVM
@using AppDigitalCv.Security

<div>
    <form id="myForm" enctype="multipart/form-data">

        @Html.HiddenFor(model => model.id, new { id = "id" })

        <div class="bs-container">

            <div class="col-md-4 col-xs-12 col-sm-6 col-lg-4">
                <img alt="user Pic" src="~/Imagenes/escudo_uttt.jpg" id="profile-image1" class="product-img img-responsive" width="100" height="70" />
            </div>
            <div class="row">
                <div class="form-group col-lg-7">
                    <div class="form-group">
                        <label>Nombre de la Empresa o Institución</label>
                        @Html.TextBoxFor(model => model.strNombreEmpresaInstitucion, new { @class = "form-control input-sm",id="NombreEmpresaInstitucion" })
                    </div>
                    <div class="form-group">
                        <label>Nombre del Alumno(a):</label>
                        @Html.TextBoxFor(model => model.strNombreAlumno, new { @class = "form-control input-sm",id="NombreAlumno"})
                    </div>
                    <div class="form-group">
                        <label>Estado de la Estadia:</label>
                        @Html.DropDownListFor(model => model.strEstadoEstadia, null, new { @class = "form-control input-sm",id="EstadoEstadia" })
                    </div>
                    <div class="form-group">
                        <label>Resumen del Proyecto</label>
                        @Html.TextBoxFor(model => model.strResumenProyecto, new { @class = "form-control input-sm",id="ResumenProyecto"})
                    </div>
                    <div class="form-group">
                        <label>Objetivo</label>
                        @Html.TextBoxFor(model => model.strObjetivo, new { @class = "form-control input-sm",id="Objetivo"})
                    </div>                  
                    <div class="form-group">
                        <label>Puntos Criticos a Resolver</label>
                        @Html.TextBoxFor(model => model.strPuntosCriticosResolver, new { @class = "form-control input-sm",id="PuntosCriticosResolver"})
                    </div>
                    <div class="form-group">
                        <label>Logros o Beneficios Obtenidos</label>
                        @Html.TextBoxFor(model => model.strLogrosBeneficiosObtenidos, new { @class = "form-control input-sm",id="LogrosBeneficiosObtenidos"})
                    </div> 
                    <div class="form-group">
                        <a href="#" id="btnSubmit" class="btn btn-sm btn-success"><span><i class=""></i> Actualizar</span></a>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-lg-6 col-lg-offset-4">
                        
                    </div>
                </div>
            </div>
        </div>
    </form>

</div>


@model AppDigitalCv.ViewModels.ExperienciaLaboralInternaVM
@using AppDigitalCv.Security

<div>
    <form id="myForm" enctype="multipart/form-data">

        @Html.HiddenFor(model => model.id, new { id = "id" })
        @Html.HiddenFor(model => model.idPersonal)

        <div class="bs-container">

            <div class="col-md-4 col-xs-12 col-sm-6 col-lg-4">
                <img alt="user Pic" src="~/Imagenes/escudo_uttt.jpg" id="profile-image1" class="product-img img-responsive" width="100" height="70" />
            </div>
            <div class="row">
                <div class="form-group col-lg-7">
                    <label class="titleletter">Datos Actuales</label>
                    <hr />
                    <label>Actividades Desempeñadas:</label>
                    @Html.TextBoxFor(model => model.strActividadDesempeñada, new { @class = "form-control input-sm",id="strActividadDesempeñada" })

                    <Label>Fecha de Inicio:</Label>
                    @Html.TextBoxFor(model => model.dteFechaInicio, new { @class = "form-control input-sm",@type="date",id="FechaInicio" })

                    <Label>Fecha de Termino:</Label>
                    @Html.TextBoxFor(model => model.dteFechaTermino, new { @class = "form-control input-sm",@type="date",id="FechaTermino" })

                </div>

                <div class="row">
                    <div class="form-group col-lg-6 col-lg-offset-4">
                        <a href="#" id="btnEnviar" class="btn btn-sm btn-success"><span><i class="fa fa-edit"></i> Actualizar</span></a>
                    </div>
                </div>
            </div>
        </div>
    </form>

</div>


<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script src="~/Content/js/plugins/bootstrap/bootstrap.min.js"></script>


<script>

    $(document).ready(function () {

        $("#btnEnviar").click(function () {

            var prueba =  $('#id').val();

            alert(prueba);

            var ExperienciaLaboralInternaVM = {};
            var IdPersonal = @SessionPersister.AccountSession.IdPersonal;

            ExperienciaLaboralInternaVM.IdPersonal = IdPersonal;
            ExperienciaLaboralInternaVM.id = $('#id').val();

            ExperienciaLaboralInternaVM.strActividadDesempeñada = $('#strActividadDesempeñada').val();
            ExperienciaLaboralInternaVM.dteFechaInicio = $('#FechaInicio').val();
            ExperienciaLaboralInternaVM.dteFechaTermino = $('#FechaTermino').val();
            $.ajax({
                type: "POST",
                url: "/ExperienciaLaboralInterna/EditExperiencia",
                data: { experienciaLaboralInternaVM: ExperienciaLaboralInternaVM},
                success: function () {
                    $("#myModal1").modal("hide");
                    window.location.href = "/ExperienciaLaboralInterna/Create";
                },
                error: function (xhr, textStatus, errorThrown) {
                    alert(textStatus);
                    console.log(textStatus);

                }
            })
        });
    });
</script>



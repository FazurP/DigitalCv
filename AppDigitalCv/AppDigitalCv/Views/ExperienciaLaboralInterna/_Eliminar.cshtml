@model AppDigitalCv.ViewModels.ExperienciaLaboralInternaVM
@using AppDigitalCv.Security

<div>

    <form id="myFormulario">
        @Html.HiddenFor(m => m.idPersonal, new { @class = "form-control input-sm", id = "idPersonal" })
        @Html.HiddenFor(m => m.id)
        <div class="form-inline">
            <div class="form-group">
                <div class="row">
                    <div class="col-lg-3">
                        <img alt="user Pic" src="~/Imagenes/escudo_uttt.jpg" id="profile-image1" class="product-img img-responsive" width="100" height="70" />
                    </div>
                    <div class="col-lg-3">
                        ¿Deseas <strong>Eliminar</strong> este registro realmente?
                    </div>
                    <div class="col-lg-6">
                        <ul class="todo-list">
                            <li class="list-unstyled">
                                @Html.DisplayFor(m => m.strActividadDesempeñada, new { @class = "form-control input-sm", @placeholder = "Nombre de la Actividad", @disabled = "disabled" })
                            </li>
                        </ul>
                        <a href="#" id="btnSubmit">
                            <i class="btn btn-sm btn-google glyphicon glyphicon-trash"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

<script>
    $(document).ready(function () {

        $("#btnSubmit").click(function () {

            $("#loaderDiv").show();

            var myformdat = $("#myFormulario").serialize();

            $.ajax({

                type: "POST",
                url: "/ExperienciaLaboralInterna/DeleteExperiencia",
                data: myformdat,
                success: function () {
                    $("#loaderDiv").hide();
                    $("#myModal").modal("hide");
                    window.location.href = "/ExperienciaLaboralInterna/Create";

                }

            })
        })

    })
</script>
